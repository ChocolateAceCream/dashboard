<h1>Summary ID: <%= @summary.id %></h1>>

<table class="table table-striped">
  <tr>
    <th>Site Name</th>
    <th>Site ID</th>
    <th>Description</th>
    <th>Ping(ms)</th>
    <th>ip</th>
    <th>Updated at</th>
    <th colspan="3"></th>
  </tr>


 <% @sites.each do |site| %>
    <tr>
        <td><%= site.name %></td>
        <td><%= site.id %></td>
        <td><%= site.description %></td>
        <td><%= site.ping %></td>
        <td><%= ip%></td>
        <td><%= time_ago_in_words(site.updated_at) %></td>
    </tr>
  <% end %>
</table>
 



<%= link_to 'Back', summaries_path %>
